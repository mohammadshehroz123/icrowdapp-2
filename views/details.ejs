<body class="hold-transition sidebar-mini layout-fixed">

        <nav class="navbar navbar-expand-sm bg-light">
            <a class="navbar-brand" href="/dashboard">Join Brothers Consultancy.</a>
            <ul class="navbar-nav ml-auto">
                <!-- Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                       BULK SMS
                    </a>
                    <div class="dropdown-menu">
                        <% _.forEach(files, function(file, index){ %>
                        <a class="dropdown-item" href="/sendsms<%= file.path %>"><%= file.title %></a>
                        <% }) %>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/upload">Upload File</a>
                </li>
                <li>
                    <a class="nav-link" href="/testing">Testing</a>
                </li>
				<li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </nav>
	
		<div class="container">
	
		<div class="row">
			<div class="col-lg-6">
				<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">Details</h1>
			</div>
			<div class="col-lg-6" style="text-align: center;">
				<button type="button" id="toggle" class="btn btn-primary" style=" margin: 0; position: absolute; top: 75%;-ms-transform: translateY(-50%);transform: translateY(-50%);">
					Hide / Show
				</button>
			</div>
		</div>
		</br>

        <hr class="mt-2 mb-5">


		<% if(hasError) {%>
            <div class="alert alert-danger text-center mx-auto" style="max-width: 50% !important;">
                <h6 style="display : inline-block;"><%= message %></h6>
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </div>
        <% } %>

        <% if(hasSuccess) { %>
        <table class="table table-dark table-striped w-50 mx-auto" id="data">
            <thead>
                <tr>
                    <th class="w-50 text-center">Index</th>
                    <th class="w-50 text-center">Mobile Number</th>
                </tr>
            </thead>
            <tbody>
            <% _.forEach(data, function(d, index){ %>
                
              <tr>
                <td class="w-50 text-center"><%= index %></td>
                <td class="w-50 text-center"><%= d %></td>
            </tr>

            <% }) %>
        </tbody>
    </table>    
        <% } %>

		<hr class="mt-2 mb-5">
			
  </div>

</div>

<!-- /.container -->

    <!-- jQuery -->
    <!-- jQuery UI 1.11.4 -->
	<script src="plugins/jquery/jquery.min.js"></script>
	<script>
		
		let btns = $(".btn-info");
		
		btns.on('click', function() {
			let id  = this.id;
			let field = $("#field_" + id);
			let hidden_field = $("#hidden_" + id);
			
			let extension = hidden_field.val().split(".")[1];
			let new_extension = field.val().split(".")[1];
			
			if(extension.toLowerCase() != new_extension.toLowerCase()) {
				return window.alert("Extension must not be changed");
			}
			
			else {
				$.ajax({
					method: "POST",
					url: "https://tranquil-plains-27029.herokuapp.com/photos/rename",
					data: {old_name: hidden_field.val(), new_name: field.val()},
					success: function(response) {
						window.alert(response);
						window.location.href = "https://tranquil-plains-27029.herokuapp.com/photos";
					}
				});
			}
		});
	</script>
