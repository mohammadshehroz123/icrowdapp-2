<body class="hold-transition sidebar-mini layout-fixed">

        <nav class="navbar navbar-expand-sm bg-light">
            <a class="navbar-brand" href="/dashboard">Join Brothers Consultancy.</a>
            <ul class="navbar-nav ml-auto">
                <!-- Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        BULK SMS
                    </a>
                    <div class="dropdown-menu">
                        <% _.forEach(files, function(file, index){ %>
                        <a class="dropdown-item" href="/sendsms<%= file.path %>"><%= file.title %></a>
                        <% }) %>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/upload">Upload File</a>
                </li>
                <li>
                    <a class="nav-link" href="/testing">Testing</a>
                </li>
				<li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </nav>


	
		<div class="container">
	
		<div class="row">
			<div class="col-lg-6">
				<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">BULK SMS DETAILS</h1>
			</div>
			
		</div>
		</br>

        <hr class="mt-2 mb-5">


		<% if(hasError) {%>
            <div class="alert alert-danger text-center mx-auto" style="max-width: 50% !important;">
                <h6 style="display : inline-block;"><%= message %></h6>
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </div>
        <% } %>

        <img src="/uploads/loader.gif" id="image" alt="" style="display: block;margin-left: auto;margin-right: auto;"/>
            

        <% if(hasSuccess) { %>
        <input type="hidden" name="file" value="<%= file.path %>" id="file"/>
        <input type="hidden" name="remaining" value="<%= remaining %>" id="remaining"/>
        <input type="text" class="form-control w-50 mx-auto" id="message" name="message" placeholder="Enter message!"/>
        <table class="table w-50 mx-auto my-2" id="holder">
            <thead class="my-2">
              <tr>
                <th>Index</th>
                <th>Chunk #</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<chunks; i++) { %>
                <tr>
                    <td><%= i %></td>
                    <td>Chunk # <%= (i + 1) %></td>
                    
                    <% if(compare_chunks.indexOf(i) > -1) { %>
                        <td>Sent</td>
                    <% } else { %>
                        <td>Unsent</td>
                    <% } %>

                    <% if(compare_chunks.indexOf(i) > -1) { %>
                        <td><i class="fa fa-check-circle"></i></td>
                    <% } else { %>
                        <td><button type="button" class="btn btn-primary ajax" id="chunk_<%= (i+1) %>" class="btn btn-primary" >Send</button></td>
                    <% } %>
                </tr>
                <% } %>
            </tbody>
    </table>
<% } %>

		<hr class="mt-2 mb-5">
			
  </div>

</div>

