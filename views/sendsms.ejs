<script type="text/javascript">
    $(document).ready(function(){
    $('#image').hide();
    $('.ajax').on('click', function(){
        if($('#message').val() == '') {
            window.alert("Enter message");
            $('#message').focus();
            return;
        }

        var message = $('#message').val();
        var chunk = $(this).attr('id').split('_')[1];
        var file = $('#file').val();
        $('#image').show();
        $('#holder').hide();
        $('#message').hide();
        console.log("/ajax/"+chunk+"/"+encodeURI(message)+""+file);
        $.ajax({
            url: "http://localhost:3000/ajax",
            type: "POST",
            data: JSON.stringify({message: encodeURI(message), chunk: chunk, file: file}),
            contentType: 'application/json',
            success: function(response){
                console.log(response);
                if(Object.keys(response).length > 0) {
                    $('#image').hide();

                    if(!response.error) {
                        window.alert(response.sent + " Sent successfully!");
                        location.reload();
                    } else {
                        $('#holder').show();
                    }
                }
            }
        });
    }); 
    });
    </script>


</html>